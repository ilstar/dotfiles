parse_git_branch() {
  RSLT=''
  GIT_BRANCH=`git branch 2> /dev/null | sed -e '/^[^*]/d' -e 's/^* //'` 
  if [ "$GIT_BRANCH" ]
	then
		GIT_STATUS=`git status 2> /dev/null | grep 'working directory clean'`
		CLR='2'
		if [ "$GIT_STATUS" ]
		then
			CLR='2'
	  else
			CLR='1'
	  fi
		RSLT="[3${CLR}m[${GIT_BRANCH}][0;36m"
	fi
	echo $RSLT
}

parse_git_remote_status() {
  RSLT=''
  GIT_REMOTE_STATUS=`git status 2>/dev/null | grep 'Your branch is ahead of'`
  if [ "$GIT_REMOTE_STATUS" ]
  then
    RSLT="[31mr[0;36m"
  fi
  echo $RSLT
}

COL=`expr $COLUMNS - 1`
LINE=''
COUNT=0
while test ${COL} -gt $COUNT
do
	let COUNT++
	LINE="${LINE}â”€"
done

# export PS1='\n[0;36mâ”Œ${LINE}[${COL}Dâ”€â”€â”€â”€â”€â”€â”€â”€â”€[36m[\t][0;36mâ”€â”€â”€â”€â”€[34m[\W][0;36mâ”€â”€â”€â”€â”€$(parse_git_branch)â”€â”€â”€
export PS1='\n[0;36mâ”Œ${LINE}[${COL}Dâ”€â”€â”€â”€â”€â”€â”€â”€â”€[36m[\t][0;36mâ”€â”€â”€â”€â”€[34m[\W][0;36mâ”€â”€â”€â”€â”€â”€â”€â”€
â””â”€â”€> \$ \[\e[00m\]'

# set iTerm title to current dir
export PROMPT_COMMAND='echo -en "\033]0;${PWD}\007"'
